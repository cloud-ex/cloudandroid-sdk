<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <com.sl.ui.library.widget.material.MaterialImageView
            android:id="@+id/iv_left"
            android:src="@drawable/icon_arrow_left"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <com.flyco.tablayout.SegmentTabLayout
            android:id="@+id/title_tab_layout"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tl_bar_color="@color/transparent"
            app:tl_bar_stroke_color="@color/transparent"
            app:tl_indicator_height="0dp"
            app:tl_divider_width="0dp"
            app:tl_tab_padding= "10dp"
            app:tl_textSelectColor="@color/text_color"
            app:tl_textUnselectColor="@color/hint_color"
            app:tl_textsize="@dimen/font_size" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>