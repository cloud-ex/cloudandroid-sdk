<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_contract"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_xxl"
            android:drawableLeft="@drawable/exchange_side"
            android:drawablePadding="5dp"
            android:layout_centerVertical="true"
            android:text="--"
            tools:text="BTCUSDT永续合约"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/icon_more"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>


        <com.sl.ui.library.widget.material.MaterialTextView
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/main_yellow"
            android:layout_marginRight="15dp"
            android:gravity="center"
            tools:text="全仓100X"
            android:background="@drawable/lever_border_bg"
            android:layout_toLeftOf="@id/iv_more"
            android:id="@+id/tv_lever"
            android:layout_width="wrap_content"
            android:layout_height="34dp"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</LinearLayout>