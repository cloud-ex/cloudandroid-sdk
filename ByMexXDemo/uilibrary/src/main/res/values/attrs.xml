<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CommonlyUsedButtonView">
        <attr name="bgColor" format="color" />
        <attr name="buttonTextColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="textStyleBold" format="boolean" />
        <attr name="isShowLoading" format="boolean" />
        <attr name="normalEnable" format="boolean" />
        <attr name="normalSelectEnable" format="boolean" />
        <attr name="bottonTextContent" format="string" />
    </declare-styleable>
    <!--Input Style start-->
    <style name="TextInputLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="colorControlNormal">@color/hint_color</item>
        <item name="colorControlActivated">@color/hint_color</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TextInputTopHintLayout">
        <item name="android:textColor">@color/main_yellow</item>
        <item name="android:textSize">@dimen/font_size_m</item>
    </style>
    <!--Input Style end-->
    <declare-styleable name="inputLayout">
        <attr name="inputHint" format="string" />
        <attr name="inputHelperHint" format="string" />
        <attr name="rightText" format="string" />
        <attr name="rightTextColor" format="color|reference" />
        <attr name="rightIcon" format="reference" />
    </declare-styleable>

    <!--Input Style end-->
    <declare-styleable name="titleBarLayout">
        <attr name="bar_title" format="string" />
        <attr name="bar_right_text" format="string" />
        <attr name="bar_right_icon" format="reference" />
        <attr name="bar_right_color" format="color" />
    </declare-styleable>

    <declare-styleable name="EmptyLayout">
        <attr name="empty_text" format="string" />
        <attr name="empty_icon" format="reference" />
    </declare-styleable>

    <!--Input Style end-->
    <declare-styleable name="commonItemLayout">
        <attr name="itemLeftText" format="string" />
        <attr name="itemRightText" format="string" />
        <attr name="isCheckWidget" format="boolean" />
        <attr name="itemBgColor" format="color" />
    </declare-styleable>

    <declare-styleable name="KLineChartView">
