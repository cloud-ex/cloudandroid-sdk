<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dialog_center_bg">


    <TextView
        android:gravity="center_vertical"
        tools:visibility="visible"
        tools:text="标题"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size"
        />

    <TextView
        tools:text="内容"
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_14" />


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.sl.ui.library.widget.material.MaterialTextView
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content_layout"
            android:layout_toLeftOf="@+id/tv_sure"
            android:text="@string/common_text_btnCancel"
            android:textColor="@color/hint_color"
            android:textSize="16sp"
             />

        <com.sl.ui.library.widget.material.MaterialTextView
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content_layout"
            android:layout_alignParentRight="true"
            android:text="@string/str_confirm"
            android:textColor="@color/main_yellow"
            android:textSize="16sp"
             />

    </LinearLayout>


</LinearLayout>