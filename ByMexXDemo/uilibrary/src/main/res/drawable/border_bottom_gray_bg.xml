<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- border color 边框的颜色-->
    <item>
        <shape>
            <solid android:color="@color/line_focus_color" />
        </shape>
    </item>
    <!-- content background 内容背景色 其中android:left="3dp" 意为左边框 -->
    <item
        android:bottom="2dp"
        >
        <shape>
            <solid android:color="@color/bg_color" />
        </shape>
    </item>
</layer-list>