<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.sl.ui.library.widget.TitleBarLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_status_success" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="成功"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/font_size_normal" />

    <TextView
        android:id="@+id/tv_vol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0.00 BTC"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_xxl" />

    <!--矿工手续费-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/str_miners_fee"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:id="@+id/tv_miners_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_normal"
            tools:text="0.00000000 BTC" />

    </LinearLayout>

    <View
        style="@style/common_horizon_line_style"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="15dp" />
    <!--提现充值地址-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_to_address_label"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/str_withdraw_address"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:id="@+id/tv_to_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_normal"
            tools:text="1GbnLcRZLSB5rhdurgJKM7fz5fYwhkpyhv" />

    </LinearLayout>

    <View
        style="@style/common_horizon_line_style"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="15dp" />

    <!--TxId-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Txid"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:id="@+id/tv_tx_hash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_normal"
            tools:text="85215840b5e7510a8250856f76da4e2848eeeeb1992f0930c8ab5adc07d57bd" />

    </LinearLayout>

    <View
        style="@style/common_horizon_line_style"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="15dp" />

    <!--From地址-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="From"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:id="@+id/tv_from_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_normal"
            tools:text="1GbnLcRZLSB5rhdurgJKM7fz5fYwhkpyhv" />

    </LinearLayout>

    <View
        style="@style/common_horizon_line_style"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="15dp" />

    <!--时间-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/str_time"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_normal"
            tools:text="19/09/01 17:07:02" />

    </LinearLayout>

    <View
        style="@style/common_horizon_line_style"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="15dp" />

</LinearLayout>