<?xml version="1.0" encoding="utf-8"?>
<com.sl.ui.library.widget.material.MaterialRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:id="@+id/item_layout"
    android:paddingLeft="15dp"
    android:paddingRight="20dp"
    android:layout_height="48dp">

    <TextView
        android:id="@+id/tv_left_text"
        android:drawablePadding="5dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中文"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_normal"
        />


    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_select"
        android:src="@drawable/icon_selected"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

</com.sl.ui.library.widget.material.MaterialRelativeLayout>